<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>

        <form class="form login-form label-group">
            <div class="form-group">
                <label for="login-email">email:</label>
                <input class="form-input" type="text" id="login-email" />
            </div>
            <div class="form-group label-group">
                <label for="login-password">password:</label>
                <input class="form-input" type="password" id="login-password" />
            </div>
            <div class="form-group">
                <button class="btn btn-danger" type="submit" id="login-button">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Signup</h2>

        <form class="form signup-form">
            <div class="form-group label-group">
                <label for="signup-name">name:</label>
                <input class="form-input" type="text" id="signup-name" />
            </div>
            <div class="form-group label-group">
                <label for="signup-email">email:</label>
                <input class="form-input" type="text" id="signup-email" />
            </div>
            <div class="form-group label-group">
                <label for="signup-password">password:</label>
                <input class="form-input" type="password" id="signup-password" />
            </div>
            <div class="form-group">
                <button class="btn btn-danger" type="submit" id="signup-button">signup</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>